upstream vdjbase_flask {
    server vdjbase_flask:5000;
}

server {
    listen 443 ssl http2;
        listen [::]:443 ssl http2;

    server_name vdjbasetest.vdjbase.org www.vdjbasetest.vdjbase.org;

    include /config/nginx/ssl.conf;

    location /static {
        proxy_pass http://vdjbase_flask;
        proxy_read_timeout 300s;
        proxy_connect_timeout 60s;
        proxy_redirect off;

        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location / {
        root /vdjbase_www;
        index index.html;
        try_files $uri $uri/ /index.html =404;
    }
}

